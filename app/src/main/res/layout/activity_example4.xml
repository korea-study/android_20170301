<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.company.demo.ex4.Example4Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/music_play_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/music_play_button_on_off"
            android:src="@drawable/play_button"
            />
        <ImageView
            android:id="@+id/music_temp_stop_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/music_temp_stop_button_on_off"
            android:src="@drawable/music_temp_stop_button"
            />

        <ImageView
            android:id="@+id/music_stop_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/music_stop_button_on_off"
            android:src="@drawable/music_stop_button"
            />

    </LinearLayout>
</LinearLayout>
